              <textarea
                class="flex-1 col-span-5 p-2 bg-white border dark:bg-neutral-700 min-h-8 max-h-28"
                placeholder="Pregunta lo que quieras"></textarea>
              <button
                class="flex flex-row items-center justify-center w-full h-full p-2 text-white bg-emerald-800"
              >
                <Arrow width="16" height="16" />
              </button>

              <div class="w-full h-auto col-span-6 text-white">
                <Icons />
              </div>
            </form>
          </section>
